{
  "name": "planet-commercetools-connector",
  "version": "0.0.0",
  "description": "The connector between Datatrans and ConnerceTools to hide Datatrans from the consumer",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'app/**/*.ts' 'test/**/*.ts'",
    "transpile": "tsc && tsc-alias -p tsconfig.json",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run transpile",
    "package:local-dev": "rm -rf ./package/local-dev/ && cd dist && cp ../serverless.yml . && serverless package --stage local-dev --region local-fake-region --verbose --package ./package/local-dev/",
    "test:base": "cross-env NODE_ENV=test STAGE=local-dev jest --runInBand --coverage",
    "test": "cross-env LOG_LEVEL=silent npm run test:base -- --verbose",
    "test:local-dev:all": "npm run lint && cross-env npm run test:base -- --silent=false --verbose",
    "test:local-dev:file": "cross-env npm run test:base -- --silent=false --verbose --coverage=false",
    "start:local-dev": "cross-env SLS_DEBUG=* NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_OPTIONS=\"-r dotenv/config\" ts-node-dev --project ./tsconfig.json --respawn -- $(which sls) offline --stage local-dev --region us-east-1",
    "start:local-dev:formatted": "npm run start:local-dev | pino-pretty -t HH:MM:ss",
    "prepare": "husky install"
  },
  "keywords": [
    "Datatrans",
    "CommerceTools",
    "Planet Payment"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "http-status-code-const-enum": "^1.0.2",
    "morphism": "^1.12.3",
    "pino": "^8.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commercetools/platform-sdk": "^2.8.0",
    "@types/aws-lambda": "^8.10.99",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.40",
    "@types/pino": "^7.0.5",
    "@types/yup": "^0.29.14",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "aws-sdk": "^2.1150.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "jest-when": "^3.5.1",
    "lint-staged": "^13.0.1",
    "pino-pretty": "^8.0.0",
    "serverless": "^3.19.0",
    "serverless-offline": "^8.8.0",
    "ts-jest": "^28.0.4",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.6.11",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  }
}
